<% provide(:title, @user.name) %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= image_tag @user.picture.url if @user.picture? %>
        <%= @user.name %>
      </h1>
    </section>
  </aside>
  <div class="col-md-8">
    <% if @user.works.any? %>
      <h3>Works (<%= @user.works.count %>)</h3>
      <ol class="works">
        <%= render @works %>
      </ol>
      <%= will_paginate @works %>
    <% end %>
  </div>
</div>
