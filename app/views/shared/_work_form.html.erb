<%= form_for(@work) do |f| %>
  <%= render 'shared/error_messages', object: f.object %>
  <div class="field">
    <%= f.text_area :title, :id => "title_area", placeholder: "Title..." %>
  </div>
  <div class="field">
    <%= f.text_area :content, :id => "content_area", placeholder: "Unleash your creativity..." %>
  </div>
  <%= f.submit "Post", class: "btn btn-primary" %>
<% end %>
