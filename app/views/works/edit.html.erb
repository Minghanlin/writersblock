<% provide(:title, 'Edit Your Masterpiece') %>
<% provide(:button_text, 'Save changes') %>

<h3>It Ain't Over Till It's Perfect</h3>

<div class="row">
  <aside class="col-md-6">
    <section class="user_info">
      <%= render 'shared/user_info' %>
    </section>
    <section class="work_form">
      <%= form_for(@work, html: { multipart: true }) do |f| %>
        <%= render 'shared/error_messages', object: f.object %>
        <div class="field">
          <%= f.text_area :title, :id => "title_area", placeholder: "Title..." %>
        </div>
        <div class="field">
          <%= f.text_area :content, :id => "content_area", placeholder: "Unleash your creativity..." %>
        </div>
        <%= f.submit "Post", class: "btn btn-primary" %>
      <% end %>

    </section>
  </aside>
  <aside class="col-md-6">
    <h3>Writing Tools</h3>
    <section class="rhyme_generator">
      <h5>Rhymer</h5>
      <form action="javascript:RhymeBrainSubmit()">
  <input type=text id="RhymeBrainInput">
  <input type=submit value="Rhyme">
</form>
<script type="text/javascript">
  var RhymeBrainMaxResults = 50;
</script>
<script type="text/javascript" src="http://rhymebrain.com/external.js"></script>
Rhyme results are provided by <a href="http://rhymebrain.com">RhymeBrain.com</a>
    </section>
    <section class="dictionary">
      <h5>Meanings</h5>
      <p>Insert Dictionary Here</p>
    </section>
    <section class="thesaurus">
      <h5>Synonyms</h5>
      <p>Insert Thesaurus Here</p>
    </section>
  </aside>
</div>
